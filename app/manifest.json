{
  "manifest_version": 2,
  "name": "Chrome Bing Dict",
  "version": "0.3.1",
  "icons": {
    "128": "icon.png"
  },
  "author": "Dremy",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["chrome-dict.js"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "update_url": "https://raw.githubusercontent.com/DremyGit/ChromeBingDict/master/update.xml"
}